@model RegisterForm
@{
    Layout = "HomePage_Layout";
    ViewData["Title"] = "Register";
}

@*@section Scripts{
        <link rel="stylesheet" href="~/MySite.css" />
    }*@

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>ThankYou</title>
    <style type="text/css">
        .field-validation-error,
        .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 style="color:saddlebrown">Registration Form</h1>
        <div style="height: 20px">&nbsp;</div>
        <p style="color:saddlebrown">Please fill in the form below.</p>
        <div style="height: 20px">&nbsp;</div>
        <div class="row">
            <div class="col-sm-6">
                <form method="post" asp-action="ProcessMe">
                    <div class="form-group row" style="color:saddlebrown">
                        <label for="firstName" class="col-sm-4 col-form-label">First Name</label>
                        <div class="col-sm-8">
                            <input type="text" asp-for="FirstName" class="form-control"
                                   id="firstName" placeholder="First">
                            <span asp-validation-for="FirstName"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="color:saddlebrown">
                        <label for="LastName" class="col-sm-4 col-form-label">Last Name</label>
                        <div class="col-sm-8">
                            <input type="text" asp-for="LastName" class="form-control"
                                   id="LastName" placeholder="Last">
                            <span asp-validation-for="LastName"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="color:saddlebrown">
                        <label for="StreetAddress" class="col-sm-4 col-form-label">Street Address</label>
                        <div class="col-sm-8">
                            <input type="text" asp-for="StreetAddress" class="form-control"
                                   id="StreetAddress" placeholder="1234 Main St.">
                            <span asp-validation-for="StreetAddress"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="color:saddlebrown">
                        <label for="zipPostalCode" class="col-sm-4 col-form-label">Zip/Postal Code</label>
                        <div class="col-sm-8">
                            <input type="text" asp-for="zipPostalCode" class="form-control"
                                   id="zipPostalCode" placeholder="12345">
                            <span asp-validation-for="zipPostalCode"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="color:saddlebrown">
                        <label for="City" class="col-sm-4 col-form-label">City</label>
                        <div class="col-sm-8">
                            <input type="text" asp-for="City" class="form-control"
                                   id="firstName" placeholder="City">
                            <span asp-validation-for="City"></span>
                        </div>
                    </div>
                    <div class="form-group row" style="color:saddlebrown">
                        <label for="inputState" class="col-sm-4 col-form-label">State</label>
                        <div class="col-sm-8">
                            <select id="inputState" class="form-control" asp-for="State">
                                <option selected value=null>Select a State</option>
                                <option>Alabama</option>
                                <option>Alaska</option>
                                <option>Arizona</option>
                                <option>Arkansas</option>
                                <option>Iowa</option>
                                <option>Ohio</option>
                                <option>Nebraska</option>
                                <option>Texas</option>
                                <option>Washington</option>
                            </select>
                            <span asp-validation-for="State"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-4" style="color:saddlebrown">Sample?</div>
                        <div class="col-sm-8">
                            <div class="form-check" style="color:saddlebrown">
                                <input class="form-check-input" type="checkbox" asp-for="Sample">
                                <label class="form-check-label" for="gridCheck1">
                                    Check for free sample
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-8 offset-sm-5">
                            <div asp-validation-summary="All">@*Please correct the following errors.*@</div>
                            <button type="submit" class="btn btn-primary">Confirm Purchase</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

